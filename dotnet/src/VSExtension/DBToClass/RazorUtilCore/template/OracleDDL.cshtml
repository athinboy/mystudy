@using System.IO
@using System
@using System.Collections.Generic
@using System.Collections
@using Org.FGQ.CodeGenerate.Config
@inherits RazorEngineCore.RazorEngineTemplateBase<Org.FGQ.CodeGenerate.Config.Table>

/*
Date: @DateTime.Now
*/

-- Start--------------------------------@Model.Table.DBName"."@Model.Table.TableNameSQL------------------
declare tablecount number;   --声明变量存储要查询的表是否存在

begin
select count(1) into tablecount  from user_tables t where t.table_name = upper('@Model.Table.TableNameSQL'); --从系统表中查询当表是否存在
     if tablecount  = 1 then 
         execute immediate 'DROP TABLE "@Model.Table.DBName"."@Model.Table.TableNameSQL"';
     end if;

end;
/

CREATE TABLE "@Model.Table.DBName"."@Model.Table.TableNameSQL" ( 

@for (var i = 0; i < @Model.Table.Columns.Count; i++){
  var col2=@Model.Table.Columns[i];
  if( col2.Validate() ){

     WriteColumnDefine(col2);
     if(i!=@Model.Table.Columns.Count-1){
       @(",\r\n");
     }else{
     @("\r\n");
     } 
  } 
} 
);

COMMENT ON TABLE "@Model.Table.DBName"."@Model.Table.TableNameSQL" IS '@Model.Table.Desc';

@for (var i = 0; i < @Model.Table.Columns.Count; i++){
  var col2=@Model.Table.Columns[i];
  if( col2.Validate() ){
@:COMMENT ON COLUMN "@Model.Table.DBName"."@Model.Table.TableNameSQL"."@col2.NameSql" IS '@col2.CommentStr()'; 
  } 
}

@{
var keys=@Model.Table.getPrimaryKeyNames();
if(keys.Count>0){
 @("ALTER TABLE \""+@Model.Table.DBName+"\".\""+@Model.Table.TableNameSQL+"\" ADD PRIMARY KEY (")
 for(var i=0;i<keys.Count;i++){
   @("\""+ @keys[i]+"\"" + (i<keys.Count-1?",":"") )
 } @:);
}
}

-- End--------------------------------@Model.Table.DBName"."@Model.Table.TableNameSQL------------------ 
@{
  void WriteColumnDefine(Column col)
  {    
       @("   \""+@col.NameSql+"\" " +@col.SqlType + "   "+@col.NullStr()  +"") 
  }
}